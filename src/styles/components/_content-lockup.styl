.content-lockup {

  display: flex;
  align-items: flex-end;
  position: relative;
  width: 100%;
  max-width: appMaxWidth;
  height: auto;
  min-height: 690px;
  max-height: 760px;
  margin: 0 auto 3px;

  @media mq-desktop-lg {
    height: 64vh;
    min-height: 690px;
    max-height: 810px;
  }

  @media mq-tablet {
    height: auto;
    min-height: 340px;
  }

  @media mq-phone-lg {
    height: auto;
    min-height: 232px;
  }

  &:first-of-type {
    margin-top: 0;
  }

  &:last-of-type {
    margin-bottom: 0;
  }

  &.video {
    .content-lockup__copy {
      pointer-events: none;
      transition: opacity 200ms ease-in-out;

      &.hidden {
        opacity: 0;
      }
    }
  }

  &__image,
  &__video {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;

    img {
      position: relative;
      width: auto;
      min-width: appMaxWidth;
      height: 100%;
      top: 50%;
      left: 50%;
      transform: translate3d(-50%, -50%, 0);

      @media mq-desktop-lg {
        width: auto;
        height: 100%;
      }

      @media mq-tablet {
        height: 100%;
        min-width: 100%;
        width: auto;
      }

      @media mq-phone-lg {
        height: auto;
        max-width: 640px;
      }
    }

    iframe,
    .fb-video,
    video {
      width: 100%;
      height: 100%;
    }
  }

  &__copy {
    position: relative;
    padding: 48px 30px;
    color: white;

    @media mq-phone-lg {
      max-width: 100%;
    }

    h1 {
      margin-bottom: 10px;
      text-transform: uppercase;

      p, a {
        font-size: h1-fs;
        line-height: h1-lh;
        font-weight: 700;
        margin: 0;

        @media mq-phone-lg {
          font-size: h1-mobile;
        }
      }
    }

    .serif + p {
      font-family: Recife;

      @media mq-phone-lg {
        font-size: 1.6rem;
      }
    }
  }
}
