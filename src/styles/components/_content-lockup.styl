.content-lockup {

  display: flex;
  align-items: flex-end;
  position: relative;
  width: 100%;
  height: 60vh;
  min-height: 700px;
  max-height: 750px;
  margin-bottom: 3px;

  &:first-of-type {
    margin-top: 0;
  }

  &:last-of-type {
    margin-bottom: 0;
  }

  &__image,
  &__video {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;

    img {
      position: relative;
      width: auto;
      min-width: appMaxWidth;
      height: 100%;
      top: 50%;
      left: 50%;
      transform: translate3d(-50%, -50%, 0);

      @media mq-desktop-lg {
        width: 100%;
        height: auto;
      }
    }

    iframe,
    .fb-video {
      width: 100%;
      height: 100%;
    }
  }

  &__copy {
    position: relative;
    padding: 48px 30px;
    color: white;

    h1 {
      margin-bottom: 10px;
      text-transform: uppercase;

      p, a {
        font-size: h1-fs;
        line-height: h1-lh;
        font-weight: 700;
        margin: 0;
      }
    }

    .serif + p {
      font-family: Recife;
    }
  }
}
