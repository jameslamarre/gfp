.content-wrapper {
  margin-top: 290px;
  // min-height: 80vh;

  @media mq-tablet {
    margin-top: 0;
  }
}

.view-wrapper {
  max-width: contentMaxWidth;
  font-family: Recife;
  margin-top: 32px;
  padding-bottom: 64px;

  .view__image {
    position: relative;
    width: 100%;
    height: 386px;
    overflow: hidden;
    margin-bottom: 32px;

    img {
      position: relative;
      width: 100%;
      height: auto;
      top: 50%;
      transform: translate3d(0, -50%, 0);

      @media mq-tablet-lg {
        width: auto;
        height: 100%;
        left: 50%;
        transform: translate3d(-50%, -50%, 0);
      }
    }
  }

  .article-content {
    max-width: appMaxWidth;
    margin: 0 auto;

    @media mq-tablet-lg {
      padding: 0 16px;
    }

    .row {
      display: flex;
      flex-wrap: wrap;
      width: 100%;
      margin-bottom: 6.4rem;

      .column {
        position: relative;
        padding-top: 1.2rem;
        padding-right: 2.2rem;

        &.border:after {
          content: '';
          position: absolute;
          width: calc(100% - 2.2rem);
          top: -10px;
          height: 2px;
          background-color: orange;
        }
      }

      .column:last-of-type {
        padding-right: 0;

        &.border:after {
          width: 100%;
        }
      }

      .full {
        flex-basis: 100%;
      }

      .double {
        flex-basis: calc(100%/1.5);
      }

      .single {
        flex-basis: calc(100%/3);
      }
    }
  }

  .view__title {
    font-size: 7.8rem;
    font-family: Druk;
    margin-bottom: 20px;
  }

  .view__copy {
    position: relative;

    p {
      font-family: Recife;
    }

    ul, li {
      list-style: disc;
    }

    ul {
      padding-left: 25px;
    }
  }

}
