.view-wrapper {

  max-width: contentMaxWidth;
  font-family: Recife;
  padding-bottom: 60px;

  .view__image {
    position: relative;
    width: 100%;
    height: 386px;
    overflow: hidden;
    margin-bottom: 30px;

    img {
      position: relative;
      width: 100%;
      height: auto;
      top: 50%;
      transform: translate3d(0, -50%, 0);
    }
  }

  .view__title {
    font-size: 7.8rem;
    font-family: Druk;
    margin-bottom: 20px;
  }

  .view__copy {
    position: relative;

    p {
      font-family: Recife;
    }
  }

}
