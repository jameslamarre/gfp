
/* Font Sizes */

h1-fs			   		= 4.8rem;
h2-fs			   		= 2.7rem;
body-fs        	= 1.6rem;

/* Line heights */

h1-lh					  = 1.0;
h2-lh					  = 1.0;
body-lh   		  = 1.5;

/* Sizes */
appMaxWidth     = 1480px;
appPadding      = 20px;
mobile-width    = 100%;
headerHeight    = 88px;

/* Colors */

gray            = #afafaf;
white           = #FFFFFF;
black           = #000000;

/* Breakpoints */

bp-phone        = 480px;
bp-phone-lg     = 640px;
bp-tablet       = 850px;
bp-tablet-lg    = 1024px;
bp-desktop      = 1280px;
bp-large        = appMaxWidth;

/* Media Queries */
mq-phone        = "all and (max-width: " + bp-phone + ")";
mq-phone-lg     = "all and (max-width: " + bp-phone-lg + ")";
mq-tablet       = "all and (max-width: " + bp-tablet + ")";
mq-tablet-lg    = "all and (max-width: " + bp-tablet-lg + ")";
mq-desktop      = "all and (max-width: " + bp-desktop + ")";
mq-desktop-lg   = "all and (min-width: " + bp-large + ")";
