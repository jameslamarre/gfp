.header {

  display: flex;
  padding: 2.2rem 2.4rem;

  .header-left {
    margin-right: 91px;
  }

  .header-right {
    width: 100%;
    margin-top: 9px;

    @media mq-tablet {
      display: none;
    }

    &__top {
      display: flex;
      justify-content: space-between;
      margin-bottom: 35px;
    }

    &__nav ul {
      display: flex;

      li {
        margin-right: 44px;
      }
    }

    &--copy {
      width: 50%;
    }
  }
}
