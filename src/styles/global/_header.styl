.header {

  display: flex;
  // position: fixed;
  position: relative;
  // top: 0;
  padding: 2.2rem 2.4rem;
  // background-color: white;
  border-bottom: solid 2px purple;
  // z-index: 9999;

  // &.scroll {
  //   .header-left,
  //   .header-right--copy {
  //     transform: scale3d(0,0,0);
  //     visibility: collapse;
  //   }
  // }

  .blob {
    position: absolute;
    border-radius: 50%;
    z-index: 0;
    transition: margin 1000ms ease-in-out, opacity 300ms ease-in-out;

    &--one {
      width: 100px;
      height: 150px;
      top: -2%;
      left: 0;
      background-color: purple;
      box-shadow: 0 0 75px 75px purple;

      &.secondary {
        width: 80px;
        height: 150px;
        top: -5%;
        left: -2%;
      }
    }

    &--two {
      width: 150px;
      height: 250px;
      top: -60%;
      left: 25%;
      background-color: orange;
      box-shadow: 0 0 40px 40px orange;

      &.secondary {
        width: 75px;
        height: 150px;
        top: -62%;
        left: 20%;
      }
    }

    &--three {
      width: 75px;
      height: 150px;
      top: 70%;
      left: 70%;
      background-color: aqua;
      box-shadow: 0 0 35px 35px aqua;

      &.secondary {
        width: 50px;
        height: 300px;
        top: 65%;
        left: 70%;
      }
    }

    &--four {
      width: 300px;
      height: 150px;
      top: 10%;
      left: 95%;
      background-color: green;
      box-shadow: 0 0 50px 50px green;
    }
  }

  .header-left {
    position: relative;
    margin-right: 91px;
    transition: transform 100ms ease-in-out;
  }

  .header-right {
    position: relative;
    width: 100%;
    margin-top: 20px;

    @media mq-tablet {
      display: none;
    }

    &__top {
      display: flex;
      justify-content: space-between;
      margin-bottom: 35px;
      transition: transform 100ms ease-in-out;
    }

    &--button {
      margin-top: 10px;
    }

    &__nav ul {
      display: flex;

      li {
        margin-right: 44px;
        transition: color 100ms ease-in-out;

        &:hover {
          color: purple;
        }
      }
    }

    &--copy {
      width: 75%;
    }
  }
}
