.header {

  display: flex;
  position: fixed;
  min-width: 100%;
  top: 0;
  padding: 2.2rem 2.4rem 3.2rem;
  background-color: white;
  border-bottom: solid 2px purple;
  z-index: 999;
  overflow: hidden;

  &.scroll {
    padding: 0.4rem 2.4rem 1.6rem;

    .lockup {
      max-height: 0;
    }

    .lockup-mini {
      max-height: 40px;
      opacity: 1;
      transition: opacity 100ms ease-in-out 50ms;
    }

    .header-right__top {
      max-height: 0;
      min-height: 0;
      margin-bottom: 0;
    }
  }

  @media mq-tablet {
    position: relative;
  }

  .lockup {
    display: block;
    width: 100%;
    overflow: hidden;
    transition: max-height 100ms ease-in-out;
  }

  .lockup-mini {
    display: block;
    position: relative;
    opacity: 0;
    max-height: 0;
    float: left;
    margin-top: 8px
  }

  .blob {
    position: absolute;
    border-radius: 50%;
    z-index: 0;
    transition: margin 1000ms ease-in-out,
                opacity 300ms ease-in-out,
                transform 500ms ease-in-out;

    &--one {
      width: 100px;
      height: 150px;
      top: -2%;
      left: 0;
      background-color: purple;
      box-shadow: 0 0 75px 75px purple;

      &.secondary {
        width: 80px;
        height: 150px;
        top: -5%;
        left: -2%;
      }
    }

    &--two {
      width: 150px;
      height: 250px;
      top: -60%;
      left: 25%;
      background-color: orange;
      box-shadow: 0 0 40px 40px orange;

      &.secondary {
        width: 75px;
        height: 150px;
        top: -62%;
        left: 20%;
      }
    }

    &--three {
      width: 75px;
      height: 150px;
      top: 70%;
      left: 70%;
      background-color: aqua;
      box-shadow: 0 0 35px 35px aqua;

      &.secondary {
        width: 50px;
        height: 300px;
        top: 65%;
        left: 70%;
      }
    }

    &--four {
      width: 300px;
      height: 150px;
      top: 10%;
      left: 95%;
      background-color: green;
      box-shadow: 0 0 50px 50px green;
    }
  }

  .header-left {
    position: relative;
    width: auto;
    max-height: 151rem;
    margin-right: 91px;
  }

  .header-right {
    position: relative;
    width: 100%;
    margin-top: 20px;

    @media mq-tablet {
      display: none;
    }

    &__top {
      display: flex;
      justify-content: space-between;
      max-height: 275px;
      min-height: 50px;
      margin-bottom: 18px;
      overflow: hidden;
      transition: all 250ms ease-in-out;
    }

    &--button {
      margin-top: 15px;
    }

    &__nav {
      display: flex;

       .nav-link-group {
         display: none;
         margin-top: 16px;

         .nav-link--small {
           min-width: 20vw;
         }
       }

       .nav-group:last-of-type .nav-link--small {
         min-width: 10vw;
       }

      .nav-group:hover .nav-link-group {
        display: block;
        width: 0;
        margin-bottom: 0.8rem;
      }

      .nav-link {
        margin-right: 44px;
        transition: color 100ms ease-in-out;

        &:hover {
          color: purple;
        }

        &.primary {
          min-height: 40px;

          @media mq-desktop-lg {
            min-height: 24px;
          }

          @media mq-tablet-lg {
            min-height: 56px;
          }
        }

        &--small {
          margin-bottom: 8px;
        }
      }
    }

    &--copy {
      width: calc(100% - 260px);

      h2 {
        @media mq-desktop {
          font-size: 2.0rem;
        }
      }
    }
  }
}
