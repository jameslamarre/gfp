.header {

  display: flex;
  padding: 2.2rem 2.4rem;

  .header-left {
    margin-right: 91px;
  }

  .header-right {
    width: 100%;
    margin-top: 20px;

    @media mq-tablet {
      display: none;
    }

    &__top {
      display: flex;
      justify-content: space-between;
      margin-bottom: 35px;
    }

    &--button {
      margin-top: 10px;
    }

    &__nav ul {
      display: flex;

      li {
        margin-right: 44px;
      }
    }

    &__nav.hover {
      li {
        opacity: 50%;
      }

      li.active {
        opacity: 100%;
      }
    }

    &--copy {
      width: calc(100% - 118px);
    }
  }
}
